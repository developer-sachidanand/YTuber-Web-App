<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Document</title>
</head>
<body>
 
    <section class="container mt-3">
        <h1 class="large text-primary">
          Dashboard
        </h1>
        <p class="lead"><i class="fas fa-user"></i>Welcome <span class="text-warning"><%= user.name %></span> </p>
        <div class="dash-buttons">
          <a href="/api/user/edit/profile" class="btn btn-secondary">
            <i class="fas fa-user-circle text-primary"></i> Edit Profile
          </a>
          <a href="/api/user/add/experience" class="btn btn-secondary">
            <i class="fab fa-black-tie text-primary"></i> Add Experience
          </a>
          <a href="/api/user/add/education" class="btn btn-secondary">
            <i class="fas fa-graduation-cap text-primary"></i> Add Education
          </a>
        </div>
  
        <h2 class="mt-5">
          Experience Credentials
        </h2>
        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th>Company</th>
              <th class="hide-sm">Title</th>
              <th class="hide-sm">Years</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% for (let i=0;i<Exp.length;i++) {%>
            <tr>
              <td><%= Exp[i].company %></td>
              <td class="hide-sm"><%= Exp[i].title %></td>
              <td class="hide-sm">
                <%= Exp[i].from %> to <%= Exp[i].to %>
              </td>
              <td>
                <a href="/api/user/deleteExp/<%= Exp[i]._id %>" class="btn btn-danger">
                  Delete
                </a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
  
        <h2 class="mt-5">
          Education Credentials
        </h2>
        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th>School</th>
              <th class="hide-sm">Degree</th>
              <th class="hide-sm">Years</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% for(let j=0;j<Edu.length;j++){ %>
            <tr>
              <td><%= Edu[j].school %></td>
              <td class="hide-sm"><%= Edu[j].degree %></td>
              <td class="hide-sm">
                <%= Edu[j].from %> to <%= Edu[j].to %>
              </td>
              <td>
                <a href="/api/user/delete/<%= Edu[j]._id %>" class=" btn btn-danger">
                  Delete
                </a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
  
        <div class="mt-4 d-flex flex-row justify-content-between">
          <a href="/" class="btn btn-danger">
            <i class="fas fa-user-minus"></i> Delete My Account
          </a>
          <a href="/api/user/logout"class="btn btn-warning">
            <i class="fas fa-user-minus"></i> LOGOUT
          </a>
        </div>
      </section>
      
</body>
</html>